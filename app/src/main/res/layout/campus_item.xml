<?xml version="1.0" encoding="utf-8"?>
<com.kproduce.roundcorners.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    app:rRadius="@dimen/dp_10"
    android:background="#f5f6f7"
    android:orientation="vertical">

    <com.kproduce.roundcorners.RoundTextView
        android:id="@+id/name"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="name"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12"
        app:rRadius="@dimen/dp_5">
    </com.kproduce.roundcorners.RoundTextView>

    <TextView
        android:id="@+id/address"
        android:text="address"
        android:gravity="center|left"
        android:textSize="@dimen/sp_12"
        android:textColor="#fda085"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20">
    </TextView>

    <TextView
        android:id="@+id/time"
        android:text="time"
        android:gravity="right|center"
        android:textSize="@dimen/sp_10"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20">
    </TextView>

</com.kproduce.roundcorners.RoundLinearLayout>