<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f9">

    <com.kproduce.roundcorners.RoundTextView
        app:rBottomRadius="@dimen/dp_70"
        android:background="@drawable/home_head_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200">
    </com.kproduce.roundcorners.RoundTextView>

    <FrameLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <ImageView
            android:id="@+id/person"
            android:layout_gravity="center|left"
            android:src="@mipmap/person"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23">
        </ImageView>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/logo_jiu_black_mini"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23">
            </ImageView>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/dp_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/home_banner"
                android:layout_margin="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"/>

            <com.kproduce.roundcorners.RoundLinearLayout
                android:padding="@dimen/dp_10"
                android:background="#ffffff"
                android:layout_margin="@dimen/dp_10"
                app:rRadius="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="今日数据"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_18"
                    android:textColor="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_totayaccess"
                            android:text="-"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#f6d365"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                        </TextView>
                        <TextView
                            android:text="今日访问"
                            android:textSize="@dimen/sp_12"
                            android:gravity="center"
                            android:textColor="#888888"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_sumuser"
                            android:text="-"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#f6d365"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                        </TextView>
                        <TextView
                            android:text="总用户"
                            android:textSize="@dimen/sp_12"
                            android:gravity="center"
                            android:textColor="#888888"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_totayactive"
                            android:text="-"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="#f6d365"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                        </TextView>
                        <TextView
                            android:text="今日活跃"
                            android:textSize="@dimen/sp_12"
                            android:gravity="center"
                            android:textColor="#888888"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.kproduce.roundcorners.RoundLinearLayout>

            <com.kproduce.roundcorners.RoundFrameLayout
                app:rBottomRadius="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_recy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </com.kproduce.roundcorners.RoundFrameLayout>

            <TextView
                android:text="©2020软件协会&amp;不才网络工作室"
                android:textSize="@dimen/sp_12"
                android:textColor="#888888"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>