<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/layout_head">
    </include>

   <LinearLayout
       android:layout_marginTop="@dimen/dp_50"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <com.kproduce.roundcorners.RoundLinearLayout
           app:rRadius="@dimen/dp_5"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_30"
           android:layout_marginRight="@dimen/dp_30"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="#f9f9f9">
           <TextView
               android:paddingTop="@dimen/dp_5"
               android:layout_marginLeft="@dimen/dp_10"
               android:text="旧密码"
               android:textColor="#333333"
               android:textSize="@dimen/sp_13"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </TextView>
           <EditText
               android:id="@+id/oldpassword"
               android:layout_marginLeft="@dimen/dp_10"
               android:textColor="#333333"
               android:maxLines="1"
               android:maxLength="11"
               android:textSize="@dimen/sp_19"
               android:textStyle="bold"
               android:background="#f9f9f9"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_35" />
       </com.kproduce.roundcorners.RoundLinearLayout>

       <com.kproduce.roundcorners.RoundLinearLayout
           app:rRadius="@dimen/dp_5"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_30"
           android:layout_marginRight="@dimen/dp_30"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="#f9f9f9">
           <TextView
               android:paddingTop="@dimen/dp_5"
               android:layout_marginLeft="@dimen/dp_10"
               android:text="新密码"
               android:textColor="#333333"
               android:textSize="@dimen/sp_13"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </TextView>
           <EditText
               android:id="@+id/newpassword1"
               android:layout_marginLeft="@dimen/dp_10"
               android:textColor="#333333"
               android:maxLines="1"
               android:maxLength="11"
               android:textSize="@dimen/sp_19"
               android:textStyle="bold"
               android:background="#f9f9f9"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_35" />
       </com.kproduce.roundcorners.RoundLinearLayout>

       <com.kproduce.roundcorners.RoundLinearLayout
           app:rRadius="@dimen/dp_5"
           android:paddingLeft="@dimen/dp_10"
           android:paddingRight="@dimen/dp_10"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_marginLeft="@dimen/dp_30"
           android:layout_marginRight="@dimen/dp_30"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="#f9f9f9">
           <TextView
               android:paddingTop="@dimen/dp_5"
               android:layout_marginLeft="@dimen/dp_10"
               android:text="确认密码"
               android:textColor="#333333"
               android:textSize="@dimen/sp_13"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </TextView>
           <EditText
               android:id="@+id/newpassword2"
               android:layout_marginLeft="@dimen/dp_10"
               android:textColor="#333333"
               android:maxLines="1"
               android:maxLength="11"
               android:textSize="@dimen/sp_19"
               android:textStyle="bold"
               android:background="#f9f9f9"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_35" />
       </com.kproduce.roundcorners.RoundLinearLayout>

       <com.kproduce.roundcorners.RoundButton
           android:layout_marginTop="@dimen/dp_50"
           android:id="@+id/next"
           app:rRadius="@dimen/dp_100"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="#ffffff"
           android:background="#f6d365"
           android:layout_width="@dimen/dp_250"
           android:layout_height="@dimen/dp_45"
           android:textStyle="bold"
           android:textSize="@dimen/sp_14"
           android:text="下一步"/>
   </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_50"
        android:padding="@dimen/dp_150"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ProgressBar>

</FrameLayout>