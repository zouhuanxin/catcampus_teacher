<?xml version="1.0" encoding="utf-8"?>
<com.kproduce.roundcorners.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/coursename"
            android:text="课程名"
            android:gravity="center|left"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/classname"
            android:text="班级"
            android:gravity="center|left"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </TextView>
    </LinearLayout>

    <com.kproduce.roundcorners.RoundTextView
        android:id="@+id/hmc"
        android:text="花名册"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#f6d365"
        app:rRadius="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50">
    </com.kproduce.roundcorners.RoundTextView>

</com.kproduce.roundcorners.RoundLinearLayout>