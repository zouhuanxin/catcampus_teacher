<?xml version="1.0" encoding="utf-8"?>
<com.kproduce.roundcorners.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rRadius="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10"
    android:background="#f7f7f7">

    <com.kproduce.roundcorners.RoundTextView
        android:id="@+id/serialnumber"
        android:text="1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:layout_gravity="center|top"
        android:background="#f6d365"
        app:rRadius="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30">
    </com.kproduce.roundcorners.RoundTextView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/coursename"
            android:text="姓名"
            android:gravity="top|left"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">
        </TextView>

        <TextView
            android:id="@+id/studentid"
            android:text="学号"
            android:gravity="top|left"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/college"
            android:text="学院"
            android:gravity="top|left"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/grade"
            android:text="年级"
            android:gravity="top|left"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </TextView>

    </LinearLayout>

</com.kproduce.roundcorners.RoundLinearLayout>